# Environment Configuration for Dr. Payal's Hospital CRM

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite:///hospital_crm.db

# Clinic Information
CLINIC_NAME=Dr. Payal's Physiotherapy Clinic
CLINIC_ADDRESS=123 Health Street, Medical City, MC 12345
CLINIC_PHONE=+1234567890
CLINIC_EMAIL=info@drpayal.com

# Feature Flags (enabled for full functionality)
ENABLE_WHATSAPP=True
ENABLE_CHATBOT=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=True

# Twilio Configuration (for WhatsApp - demo configuration)
TWILIO_ACCOUNT_SID=demo_account_sid
TWILIO_AUTH_TOKEN=demo_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Optional: OpenAI Configuration (for chatbot - leave empty for local)
# OPENAI_API_KEY=your_openai_api_key

# Optional: Email Configuration (leave empty for local)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_DEFAULT_SENDER=noreply@drpayal.com

# Working Hours
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
WORKING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday,Saturday
DEFAULT_APPOINTMENT_DURATION=30

# Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
