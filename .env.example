# Environment Configuration for Hospital CRM
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://hospital_user:hospital_password_2024@localhost:5432/hospital_crm

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production-2024
DEBUG=True

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL=redis://:redis_password_2024@localhost:6379/0

# =============================================================================
# TWILIO CONFIGURATION (WhatsApp Integration)
# =============================================================================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# =============================================================================
# OPENAI CONFIGURATION (AI Chatbot)
# =============================================================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
WTF_CSRF_ENABLED=True

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_url

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# CLINIC CONFIGURATION
# =============================================================================
CLINIC_NAME=Dr. Payal's Physiotherapy Clinic
CLINIC_ADDRESS=123 Health Street, Medical City, MC 12345
CLINIC_PHONE=+1234567890
CLINIC_EMAIL=info@drpayal.com

# =============================================================================
# APPOINTMENT CONFIGURATION
# =============================================================================
DEFAULT_APPOINTMENT_DURATION=30  # minutes
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
WORKING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday,Saturday

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Razorpay (for Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (for international payments)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# AWS S3 for backups (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# =============================================================================
# VIDEO CONSULTATION CONFIGURATION
# =============================================================================
# Agora.io for video calls (optional)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WHATSAPP=True
ENABLE_CHATBOT=True
ENABLE_ONLINE_CONSULTATION=True
ENABLE_PAYMENT_GATEWAY=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=True

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Only for development
FLASK_DEBUG=True
TESTING=False

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Gunicorn Configuration
# WORKERS=4
# WORKER_CLASS=gevent
# WORKER_CONNECTIONS=1000
# TIMEOUT=120
# KEEPALIVE=2
# MAX_REQUESTS=1000
# MAX_REQUESTS_JITTER=100

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# These are used by docker-compose.yml
POSTGRES_DB=hospital_crm
POSTGRES_USER=hospital_user
POSTGRES_PASSWORD=hospital_password_2024

# =============================================================================
# RENDER DEPLOYMENT CONFIGURATION
# =============================================================================
# For Render.com deployment
# RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
